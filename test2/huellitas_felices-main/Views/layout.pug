doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Huellitas Felices

    // Google Fonts
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet")

    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")

    // Bootstrap Icons
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")

    style.
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #F0EDE7;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        flex: 1;
        padding: 20px;
      }

      .dashboard-header {
        width: 100%;
        height: 60px;
        background-color: #762051;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
      }

      .dashboard-header .logo {
        height: 40px;
      }

      .dashboard-header .user {
        color: #fff;
        font-weight: 200;
      }

      footer {
        width: 100%;
        background-color: #762051;
        color: #fff;
        text-align: center;
        padding: 15px;
      }

      .btn-nuevo {
        background-color: #762051;
        border-color: #762051;
        color: #fff;
      }

      .btn-nuevo:hover {
        opacity: 0.85;
      }

      .btn-secondary {
        background-color: #9A4475;
        border-color: #9A4475;
        color: #fff;
      }

      .btn-secondary:hover {
        opacity: 0.85;
      }

  body
    //- Cambiar esta parte en layout.pug - SOLO el div.user
    header.dashboard-header
      img.logo(src="/images/logo.png" alt="Logo")
      div.user
        .dropdown
          a.dropdown-toggle.text-white.text-decoration-none(
            href="#", 
            role="button", 
            data-bs-toggle="dropdown", 
            aria-expanded="false",
            style="cursor: pointer;"
          )
            i.bi.bi-person-circle.me-2
            | Ferrazin Nervegna Mayra
          ul.dropdown-menu.dropdown-menu-end
            li
              a.dropdown-item(href="/servicios")
                i.bi.bi-heart-pulse-fill.me-2
                | Servicios
            li
              a.dropdown-item(href="/empleados")
                i.bi.bi-person-badge.me-2
                | Empleados
            li
              a.dropdown-item(href="/agenda")
                i.bi.bi-calendar-event.me-2
                | Agenda
            li
              a.dropdown-item(href="/clientes")
                i.bi.bi-people.me-2
                | Clientes
            li
              a.dropdown-item(href="/mascotas")
                i.bi.bi-heart-fill.me-2
                | Mascotas
            li
              a.dropdown-item(href="/caja")
                i.bi.bi-cash-coin.me-2
                | Caja
            li
              a.dropdown-item(href="/Productos")
                i.bi.bi-box-seam.me-2
                | Productos

    main.container
      block content

    footer
      | Todos los derechos reservados Â© 2025 Huellitas Felices

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")

