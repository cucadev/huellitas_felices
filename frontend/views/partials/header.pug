nav.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-sm.sticky-top
  .container-fluid.px-4
    // LOGO
    a.navbar-brand.d-flex.align-items-center(href="/clientes")
      i.bi.bi-heart-pulse-fill.text-primary.me-2.fs-3
      span.fw-bold.text-dark Huellitas Felices

    // BOTÓN MÓVIL
