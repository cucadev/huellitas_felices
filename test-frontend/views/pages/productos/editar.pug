doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Producto - Huellitas Felices

    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet")

    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")

    style.
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #F0EDE7;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
      }
      main { flex: 1; padding: 20px; }
      .dashboard-header {
        width: 100%;
        height: 60px;
        background-color: #762051;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
      }
      .dashboard-header .logo { height: 40px; }
      .dashboard-header .user { color: #fff; font-weight: 200; }
      footer {
        background-color: #762051;
        color: #fff;
        text-align: center;
        padding: 15px;
        margin-top: auto;
      }
      .btn-guardar {
        background-color: #762051;
        border: none;
        color: #fff;
        font-weight: 600;
      }
      .btn-guardar:hover { background-color: #9A4475; }
      .btn-cancelar {
        background-color: #e0e0e0;
        color: #333;
        font-weight: 600;
      }
      .btn-cancelar:hover { background-color: #c7c7c7; }

  body
    header.dashboard-header
      img.logo(src="/img/logo.png" alt="Logo")
      div.user
        i.bi.bi-person-circle
        |  Ferrazin Nervegna Mayra

    main.container
      h2.text-center.mb-4 Editar Producto
      form(action=`http://localhost:3000/productos/editar/${producto._id}` method="POST" class="mx-auto" style="max-width: 700px; background:#fff; padding:20px; border-radius:10px; box-shadow:0 2px 5px rgba(0,0,0,0.1)")
        .mb-3
          label.form-label(for="nombre") Nombre
          input.form-control(type="text" name="nombre" required value=producto.nombre)
        .mb-3
          label.form-label(for="precio") Precio
          input.form-control(type="number" name="precio" step="0.01" required value=producto.precio)
        .mb-3
          label.form-label(for="stock") Stock
          input.form-control(type="number" name="stock" required value=producto.stock)
        .mb-3
          label.form-label(for="categoria") Categoría
          input.form-control(type="text" name="categoria" required value=producto.categoria)
        .mb-3
          label.form-label(for="descripcion") Descripción
          textarea.form-control(name="descripcion" rows="3")= producto.descripcion

        .d-flex.gap-2.justify-content-center
          button.btn.btn-guardar(type="submit") Guardar Cambios
          a.btn.btn-cancelar(href="/productos/dashboard") Cancelar

    footer
      | Todos los derechos reservados © 2025 Huellitas Felices

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")

