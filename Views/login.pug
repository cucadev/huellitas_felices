doctype html
html
  head
    title Login - PetShop
  body
    h1 Iniciar sesión
    form(action="/api/users/login" method="POST")
      label(for="email") Email:
      input(type="email" name="email" required)
      br
      label(for="password") Contraseña:
      input(type="password" name="password" required)
      br
      button(type="submit") Entrar