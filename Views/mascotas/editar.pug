extends ../layout.pug

block content
  h1 #{titulo}

  form(action=`/mascotas/editar/${mascota._id}` method="POST")
    .mb-3
      label.form-label(for="nombre") Nombre
      input.form-control(type="text" name="nombre" required value=mascota.nombre)
    .mb-3
      label.form-label(for="especie") Especie
      input.form-control(type="text" name="especie" required value=mascota.especie)
    .mb-3
      label.form-label(for="raza") Raza
      input.form-control(type="text" name="raza" required value=mascota.raza)
    .mb-3
      label.form-label(for="edad") Edad
      input.form-control(type="number" name="edad" required value=mascota.edad)
    .mb-3
      label.form-label(for="cliente") Due√±o
      select.form-select(name="cliente" required)
        option(value="") -- Seleccione un cliente --
        each cliente in clientes
          option(value=cliente._id selected=(mascota.cliente.equals(cliente._id) ? true : false)) #{cliente.nombre} #{cliente.apellido}
    button.btn.btn-nuevo(type="submit") Guardar Cambios
    a.btn.btn-secondary(href="/mascotas") Cancelar
