extends ../layout

block content
  .container
    h1 Editar Producto

    form(action=`/productos/editar/${producto._id}` method="POST")
      label Nombre
      input.form-control(type="text" name="nombre" value=producto.nombre required)

      label Descripción
      textarea.form-control(name="descripcion")= producto.descripcion

      label Proveedor
      input.form-control(type="text" name="proveedor" value=producto.proveedor)

      label Costo Unitario
      input.form-control(type="number" step="0.01" name="costoUnitario" value=producto.costoUnitario required)

      label Unidad de Venta
      input.form-control(type="text" name="unidadVenta" value=producto.unidadVenta required)

      label Categoría
      input.form-control(type="text" name="categoria" value=producto.categoria)

      label Precio Venta
      input.form-control(type="number" step="0.01" name="precioVenta" value=producto.precioVenta required)

      label Stock Actual
      input.form-control(type="number" name="stockActual" value=producto.stockActual required)

      label Stock Mínimo
      input.form-control(type="number" name="stockMinimo" value=producto.stockMinimo required)

      button.btn.btn-primary.mt-3(type="submit") Actualizar
      a.btn.btn-secondary.mt-3.ms-2(href="/productos") Cancelar





