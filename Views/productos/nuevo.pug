extends ../layout

block content
  .container
    h1 Nuevo Producto

    form(action="/productos/nuevo" method="POST")
      label Nombre
      input.form-control(type="text" name="nombre" required)

      label Descripción
      textarea.form-control(name="descripcion")

      label Proveedor
      input.form-control(type="text" name="proveedor")

      label Costo Unitario
      input.form-control(type="number" step="0.01" name="costoUnitario" required)

      label Unidad de Venta
      input.form-control(type="text" name="unidadVenta" required)

      label Categoría
      input.form-control(type="text" name="categoria")

      label Precio Venta
      input.form-control(type="number" step="0.01" name="precioVenta" required)

      label Stock Actual
      input.form-control(type="number" name="stockActual" required)

      label Stock Mínimo
      input.form-control(type="number" name="stockMinimo" required)

      button.btn.btn-primary.mt-3(type="submit") Guardar
      a.btn.btn-secondary.mt-3.ms-2(href="/productos") Cancelar







