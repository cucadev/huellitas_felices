doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Dashboard - Huellitas Felices

    // Google Fonts
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet")

    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")

    // Bootstrap Icons
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")

    style.
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #F0EDE7;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        flex: 1;
      }


      .dashboard-btn {
        width: 350px;
        height: 180px;
        margin-top: 10px;
        font-size: 1.4rem;
        font-weight: 600;
        color: #fff;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s, box-shadow 0.2s;
        text-decoration: none;
      }
      .dashboard-btn i {
        font-size: 3.2rem;
      }
      .dashboard-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        color: #fff;
      }

      .btn-clientes { background-color: #762051; }
      .btn-productos { background-color: #9A4475; }
      .btn-compras { background-color: #E184B9; }
      .btn-ventas { background-color: #762051; }
      .btn-caja { background-color: #9A4475; }
      .btn-usuarios { background-color: #E184B9; }
      .btn-reportes { background-color: #762051; }
      .btn-config { background-color: #9A4475; }
      .btn-ayuda { background-color: #E184B9; }


      .dashboard-header {
      width: 100%;
      height: 60px;
      background-color: #762051;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      margin-bottom: 50px; 
      }
      .dashboard-header .logo {
        height: 40px;
      }
      .dashboard-header .user {
        color: #fff;
        font-weight: 200;
        display: flex;
        align-items: center;
        gap: 10px;
      }

      footer {
        background-color: #5E0F3C;
        color: #fff;
        text-align: center;
        padding: 15px;
      }

  body
    header.dashboard-header
      img.logo(src="/images/logo.png" alt="Logo" height="40")
      div.user
        i.bi.bi-person-circle
        |  Ferrazin Nervegna Mayra

    main.container

      .row.justify-content-center
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-clientes(href="/clientes")
            img(src="/images/icono-clientes.png" alt="Clientes" style="width:70px; margin-bottom:5px;")
            | CLIENTES
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-productos(href="/productos")
            i.bi.bi-basket3
            | PRODUCTOS
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-compras(href="/compras")
            i.bi.bi-cart-plus
            | COMPRAS

      .row.justify-content-center
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-ventas(href="/ventas")
            i.bi.bi-currency-dollar
            | VENTAS
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-caja(href="/caja")
            i.bi.bi-wallet2
            | CAJA
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-usuarios(href="/usuarios")
            i.bi.bi-person-badge
            | USUARIOS

      .row.justify-content-center
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-reportes(href="/reportes")
            i.bi.bi-bar-chart
            | REPORTES
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-config(href="/config")
            i.bi.bi-gear
            | CONFIGURACIÓN
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-ayuda(href="/ayuda")
            i.bi.bi-question-circle
            | AYUDA

    footer
      | Todos los derechos reservados © 2025 Huellitas Felices

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")





