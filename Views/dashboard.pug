doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title PET SHOP - Huellitas Felices

    // Google Fonts
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet")

    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")

    // Bootstrap Icons
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")

    style.
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #F0EDE7;
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        flex: 1;
      }

      .dashboard-btn {
        width: 350px;
        height: 180px;
        margin-top: 10px;
        margin: 10px;
        font-size: 1.4rem;
        font-weight: 600;
        color: #fff;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s, box-shadow 0.2s;
        text-decoration: none;
      }
      .dashboard-btn img, .dashboard-btn i {
        font-size: 2.5rem;
        margin-bottom: 10px;
      }
      .dashboard-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        color: #fff;
      }

      .fila1 .dashboard-btn { background-color: #6C204B; }
      .fila2 .dashboard-btn { background-color: #9A4475; }
      .fila3 .dashboard-btn { background-color: #E49AC3; }

      .dashboard-header {
        width: 100%;
        height: 60px;
        background-color: #762051;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 20px;
        margin-bottom: 80px;
      }
      .dashboard-header .logo {
        height: 40px;
      }
      .dashboard-header .user {
        color: #fff;
        font-weight: 200;
      }

      .dashboard-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
      }

      footer {
        background-color: #762051;
        color: #fff;
        text-align: center;
        padding: 15px;
        height: 45px;
      }

  body
    header.dashboard-header
      img.logo(src="/images/logo.png" alt="Logo")
      div.user
        i.bi.bi-person-circle
        |  Ferrazin Nervegna Mayra

    main.container

      .row.justify-content-center.fila1
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn(href="/clientes")
            img(src="/images/icono-clientes.png" alt="Clientes" style="width:70px; margin-bottom:0px;")
            | CLIENTES
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn(href="/mascotas")
            img(src="/images/icono-mascotas.png" alt="Mascotas" style="width:90px; margin-bottom:0px;")
            | MASCOTAS
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn(href="/productos/dashboard")
            img(src="/images/icono-productos.png" alt="Productos" style="width:90px; margin-bottom:0px;")
            | PRODUCTOS

      .row.justify-content-center.fila2
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn(href="/ventas")
            img(src="/images/icono-ventas.png" alt="Ventas" style="width:80px; margin-bottom:0px;")
            | VENTAS
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn(href="/compras")
            img(src="/images/icono-compras.png" alt="Compras" style="width:80px; margin-bottom:0px;")
            | COMPRAS
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn(href="/caja")
            img(src="/images/icono-caja.png" alt="Caja" style="width:80px; margin-bottom:0px;")
            | CAJA

      .row.justify-content-center.fila3
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn(href="/agenda")
            img(src="/images/icono-agenda.png" alt="Agenda" style="width:80px; margin-bottom:0px;")
            | AGENDA
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn(href="/config")
            img(src="/images/icono-config.png" alt="Configuración" style="width:80px; margin-bottom:0px;")
            | CONFIGURACIÓN
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn(href="/ayuda")
            img(src="/images/icono-ayuda.png" alt="Ayuda" style="width:80px; margin-bottom:0px;")
            | AYUDA

