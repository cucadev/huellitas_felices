doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Dashboard - Huellitas Felices
    // Bootstrap CSS
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    // Google Fonts Poppins
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet")
    style.
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #F0EDE7;
      }
      h1 {
        color: #762051;
        margin-top: 30px;
        margin-bottom: 30px;
        text-align: center;
      }
      .btn-module {
        width: 200px;
        height: 100px;
        margin: 15px;
        font-weight: 600;
        font-size: 1.2rem;
        background-color: #9A4475;
        color: #F0EDE7;
      }
      .btn-module:hover {
        background-color: #762051;
        color: #F0EDE7;
      }
      footer {
        background-color: #762051;
        color: #F0EDE7;
        padding: 15px 0;
        margin-top: 50px;
        text-align: center;
      }
  body
    h1 Dashboard - Huellitas Felices
    .container
      .row.justify-content-center
        .col-md-3
          a.btn.btn-module(href="/clientes") Clientes
        .col-md-3
          a.btn.btn-module(href="/productos") Productos
        .col-md-3
          a.btn.btn-module(href="/compras") Compras
      .row.justify-content-center
        .col-md-3
          a.btn.btn-module(href="/ventas") Ventas
        .col-md-3
          a.btn.btn-module(href="/caja") Caja
