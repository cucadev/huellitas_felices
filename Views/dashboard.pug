doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Dashboard - Huellitas Felices

    // Google Fonts
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet")

    // Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")

    // Bootstrap Icons
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css")

    style.
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #F0EDE7;
        color: #333;
        margin: 0;
        padding: 0;
      }
      h1 {
        margin: 30px 0;
        color: #762051;
        font-weight: 600;
        text-align: center;
      }
      .dashboard-btn {
        width: 180px;
        height: 180px;
        margin: 15px;
        font-size: 1.2rem;
        font-weight: 600;
        color: #fff;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s, box-shadow 0.2s;
        text-decoration: none;
      }
      .dashboard-btn i {
        font-size: 2.5rem;
        margin-bottom: 10px;
      }
      .dashboard-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        color: #fff;
      }
      /* Colores de botones */
      .btn-clientes { background-color: #762051; }
      .btn-productos { background-color: #9A4475; }
      .btn-compras { background-color: #E184B9; color: #762051; }
      .btn-ventas { background-color: #762051; }
      .btn-caja { background-color: #9A4475; }
      .btn-usuarios { background-color: #E184B9; color: #762051; }
      .btn-reportes { background-color: #762051; }
      .btn-config { background-color: #9A4475; }
      .btn-ayuda { background-color: #E184B9; color: #762051; }

  body
    h1 Dashboard - Huellitas Felices

    .container
      .row.justify-content-center
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-clientes(href="/clientes")
            i.bi.bi-people
            | Clientes
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-productos(href="/productos")
            i.bi.bi-basket3
            | Productos
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-compras(href="/compras")
            i.bi.bi-cart-plus
            | Compras

      .row.justify-content-center
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-ventas(href="/ventas")
            i.bi.bi-currency-dollar
            | Ventas
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-caja(href="/caja")
            i.bi.bi-wallet2
            | Caja
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-usuarios(href="/usuarios")
            i.bi.bi-person-badge
            | Usuarios

      .row.justify-content-center
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-reportes(href="/reportes")
            i.bi.bi-bar-chart
            | Reportes
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-config(href="/config")
            i.bi.bi-gear
            | Configuraci√≥n
        .col-md-4.d-flex.justify-content-center
          a.dashboard-btn.btn-ayuda(href="/ayuda")
            i.bi.bi-question-circle
            | Ayuda

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")



