doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Huellitas Felices - Pet Shop
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet")
    style.
      body { font-family: 'Poppins', sans-serif; background-color: #F0EDE7; }
      footer { background-color: #762051; color: #F0EDE7; padding: 10px 0; }
      .navbar-custom { background-color: #9A4475; }
      .navbar-custom a { color: #fff; font-weight: 600; }
  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-custom
      .container
        a.navbar-brand(href="/") Huellitas Felices
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/clientes") Clientes
            li.nav-item
              a.nav-link(href="/products") Productos
            li.nav-item
              a.nav-link(href="/ventas") Ventas
            li.nav-item
              a.nav-link(href="/caja") Caja
            li.nav-item
              a.nav-link(href="/logout") Cerrar sesión

    // Contenido dinámico
    .container.my-4
      block content

    footer.text-center
      p.mb-0 &copy; 2025 Huellitas Felices - Todos los derechos reservados

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")

